<% include ./partials/header %>
<div class= "row">
	<div class="col-md-12">
		<form action="/reset/<%= token %>" method="POST">
			<legend>Reset Password</legend>
			<div class="form-group">
				<lable for="password">New Password</lable>
				<input class="form-control" type="password" name="password" placeholder="New Password">
			</div>
			<div class="form-group">
				<lable for="confirm">Confirm Password</lable>
				<input class="form-control" type="password" name="confirm" placeholder="Confirm Password" >
			</div>
			<div class="form-group">
				<button class="btn btn-primart" type="submit">Update Password</button>
			</div>
		</form>
	</div>
</div>
